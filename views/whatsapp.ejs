<%- include('partials/header', { title: 'WhatsApp Connections' }) %> 

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>WhatsApp Connections</h1>
        <div>
            <button id="addConnectionBtn" class="btn btn-primary">+ Add Connection</button>
        </div>
    </div>

    <div id="connectionsArea">
        <!-- JS will populate connection cards here -->
        <div id="noConnections" class="py-5 text-center text-muted">
            No connections available. Click "Add Connection" to create one.
        </div>
    </div>
</div>

<!-- QR Modal -->
<div class="modal fade" id="qrModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center p-3">
            <div class="modal-header border-0">
                <h5 class="modal-title">Scan QR to Connect</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p id="qrStatusText" class="mb-3 text-muted">Waiting for QR...</p>
                <img id="qrImage" src="" alt="QR Code" style="display:none; max-width:300px; margin:auto;" />
                <p class="mt-3 text-muted">
                    After scanning on your phone, wait until status becomes <strong>Connected</strong>.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Sync Modal -->
<div class="modal fade" id="syncModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header"><h5 class="modal-title">Sync Chats</h5></div>
      <div class="modal-body">
        <label>Enter number of days to sync:</label>
        <input type="number" class="form-control" id="syncDays" value="2" min="1">
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-primary" id="syncConfirm">Sync</button>
      </div>
    </div>
  </div>
</div>

<!-- Follow-up Modal -->
<div class="modal fade" id="followModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header"><h5 class="modal-title">Send Follow-ups</h5></div>
      <div class="modal-body">
        <label>Enter day counters (comma separated):</label>
        <input type="text" class="form-control" id="followDays" value="1,3,5">
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-success" id="followConfirm">Send</button>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header"><h5 class="modal-title">Delete Connection</h5></div>
      <div class="modal-body">
        Are you sure you want to delete this connection?
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-danger" id="deleteConfirm">Delete</button>
      </div>
    </div>
  </div>
</div>

<!-- Toast container -->
<div id="toastContainer" class="toast-container position-fixed bottom-0 end-0 p-3"></div>

<script src="/js/whatsapp.js"></script>
<%- include('partials/footer') %> 
